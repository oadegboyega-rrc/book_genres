<div class="card h-100 border-primary shadow-sm" style="background-color: #f8f9fa; border-width: 2px;">
  <% if book.cover_image.present? %>
    <img src="<%= book.cover_image %>" class="card-img-top" alt="<%= book.title %> cover" style="max-height: 200px; object-fit: cover; border-bottom: 2px solid #0d6efd;">
  <% end %>
  <div class="card-body">
    <h5 class="card-title text-primary"><%= book.title %></h5>
    <p class="card-text">
      <strong>Author:</strong> <%= book.author&.name %><br>
      <strong>Genres:</strong> <%= book.genres.map(&:name).join(", ") %>
    </p>
  </div>
</div>
