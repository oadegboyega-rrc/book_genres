<%= form_with(model: book, local: true) do |form| %>
  <% if book.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>
      <ul>
        <% book.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :title, class: "form-label" %>
    <%= form.text_field :title, class: "form-control" %>
  </div>
  <div class="mb-3">
    <%= form.label :publication_year, class: "form-label" %>
    <%= form.number_field :publication_year, class: "form-control" %>
  </div>
  <div class="mb-3">
    <%= form.label :isbn, class: "form-label" %>
    <%= form.text_field :isbn, class: "form-control" %>
  </div>
  <div class="mb-3">
    <%= form.label :cover_image, class: "form-label" %>
    <%= form.text_field :cover_image, class: "form-control" %>
  </div>
  <div class="mb-3">
    <%= form.label :description, class: "form-label" %>
    <%= form.text_area :description, class: "form-control" %>
  </div>
  <div class="mb-3">
    <%= form.label :author_id, "Author", class: "form-label" %>
    <%= form.collection_select :author_id, Author.all, :id, :name, {prompt: "Select Author"}, {class: "form-select"} %>
  </div>
  <div class="mb-3">
    <%= form.label :genre_ids, "Genres", class: "form-label" %>
    <%= form.collection_select :genre_ids, Genre.all, :id, :name, {prompt: "Select Genres", multiple: true}, {class: "form-select", multiple: true} %>
  </div>
  <div class="actions">
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>
